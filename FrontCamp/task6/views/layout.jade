doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', type='text/css', href='/stylesheets/app.css')
		block styles
		title= title
	body
		.container
			.header
				h1 
					a(href='/') Blog
				.menu-buttons
					if auth
						a.button(href='/auth/logout') Logout
						a.button(href='/secure/articles/create') Create an article
						a.button(href='/secure/articles/get-user-articles') My articles
					else
						a.button(href='/auth/register') Register
						a.button(href='/auth/login') Login
			.content
				block content
			p.footer Powered by NV
