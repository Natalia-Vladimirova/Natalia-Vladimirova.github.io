extends layout

block styles
	link(rel='stylesheet', type='text/css', href='/stylesheets/article/create.css')
	link(rel='stylesheet', type='text/css', href='/stylesheets/validate.css')

block content
	h2 #{message}
	if error_message
		h3 #{error_message}
	form(method='post', action='/auth/#{auth_type}')
		input(type='hidden', name='returnUrl', value='#{returnUrl}')
		.create-line
			label(for='username') Name
			input(name='username', type='text', value='#{username ? username : ""}')
		.create-line
			label(for='password') Password
			input(name='password', type='password')
		.create-line
			input(type='submit', value='#{title}')
